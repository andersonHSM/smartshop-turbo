{
	"$schema": "https://json.schemastore.org/nest-cli",
	"collection": "@nestjs/schematics",
	"sourceRoot": "src",
	"compilerOptions": {
		"deleteOutDir": true,
		"webpack": false,
		"tsConfigPath": "tsconfig.json"
	},
	"monorepo": true,
	"root": "apps/backend",
	"entryFile": "main",
	"projects": {
		"backend": {
			"type": "application",
			"root": "apps/backend",
			"entryFile": "main",
			"sourceRoot": "src",
			"compilerOptions": {
				"tsConfigPath": "apps/backend/tsconfig.json"
			}
		}
	}
}
