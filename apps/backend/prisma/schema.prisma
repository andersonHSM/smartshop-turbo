generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          String     @id @default(uuid())
  name        String
  description String
  embedding   Bytes?
  feedbacks   Feedback[]
}

model Feedback {
  id        String   @id @default(uuid())
  query     String
  productId String
  rank      Int
  reward    Float
  createdAt DateTime @default(now())
  product   Product  @relation(fields: [productId], references: [id])
}
