generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id          Int      @id @default(autoincrement())
  name        String
  description String
  category    String
  price       Decimal  @db.Decimal(10, 2)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
  // Note: embedding field is managed through raw SQL since Prisma doesn't support pgvector type natively
}
model Feedback {
  id         String   @id @default(uuid())
  query      String
  productId  String
  rank       Int
  reward     Float
  createdAt  DateTime @default(now())
  product    Product  @relation(fields: [productId], references: [id])
}
