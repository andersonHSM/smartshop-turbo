# Server Configuration
PORT=3001
NODE_ENV=development

# API Configuration
API_PREFIX=api
API_VERSION=v1

# CORS Configuration
CORS_ENABLED=true
CORS_ORIGIN=http://localhost:3000

# Logging Configuration
# Accepted values: error, warn, info, verbose, debug
LOG_LEVEL=debug

# Database Configuration
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/product_search?schema=public

# Vector Embedding Configuration
EMBEDDING_API_KEY=your_embedding_api_key
EMBEDDING_API_URL=https://api.embedding-provider.com/v1/embeddings
EMBEDDING_MODEL=text-embedding-v1
EMBEDDING_DIMENSIONS=768

# Product Search Configuration
SEARCH_RESULT_LIMIT=5
MIN_SIMILARITY_THRESHOLD=0.6

# JWT Configuration (if needed later)
# JWT_SECRET=your_jwt_secret
# JWT_EXPIRATION=3600
