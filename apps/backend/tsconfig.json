{
	"extends": "@repo/typescript-config/base.json",
	"compilerOptions": {
		"baseUrl": "src",
		"paths": {
			"@root/*": [
				"../../../*"
			],
			"@app/*": [
				"*"
			]
		},
		"module": "CommonJS",
		"experimentalDecorators": true,
		"outDir": "../../dist/apps/backend",
		"target": "ES2022",
		"incremental": true,
		"allowSyntheticDefaultImports": true,
		"sourceMap": true,
		"moduleResolution": "node"
	},

	"include": [
		"src/**/*.ts"
	],
	"exclude": [
		"node_modules",
		"dist"
	]
}
