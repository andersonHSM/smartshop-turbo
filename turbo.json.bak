{
  "$schema": "https://turbo.build/schema.json",
  "globalDependencies": ["**/.env.*local"],
  "tasks": {
    "dev": {
      "persistent": true,
      "cache": false
    },
    "build": {
      "outputs": ["dist/**", ".next/**"]
    },
    "lint": {},
    "start": {
      "dependsOn": ["build"]
    },
    "start:prod": {
      "dependsOn": ["build"]
    }
  }
}
